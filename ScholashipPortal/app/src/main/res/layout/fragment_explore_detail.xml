<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ExploreDetailFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/green">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_back"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Chia sẻ cảm nhận"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="30dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/study"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:text="Làm thế nào để tự tin phỏng vấn?"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:text="999 lượt xem"/>

            <TextView
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="  -"/>

            <TextView
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:text="Đã đăng cách đây 2 ngày"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="1. Chuẩn bị kỹ"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Khi đi phỏng vấn, điều khiến chúng ta thấy mất tự tinh không gì khác đó là sự chuận bị thiếu chu đáo. Hãy nhớ chuẩn bị đầy đủ thông tin hồ sơ, tìm hiểu các vấn đề liên quan đến công ty. Đừng quên trang bị cho mình những bộ đồ thật gọn gàng, lịch sự..."/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="2. Tập phỏng vấn thử"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Khi đi phỏng vấn, điều khiến chúng ta thấy mất tự tinh không gì khác đó là sự chuận bị thiếu chu đáo. Hãy nhớ chuẩn bị đầy đủ thông tin hồ sơ, tìm hiểu các vấn đề liên quan đến công ty. Đừng quên trang bị cho mình những bộ đồ thật gọn gàng, lịch sự..."/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/btn_tag"
                android:textColor="@color/orange"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Cảm hứng"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/btn_tag"
                android:textColor="@color/orange"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Chia sẻ"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:text="Các bài viết tương tự"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Đừng bỏ qua những mẹo hữu ích này"/>

       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:nestedScrollingEnabled="true"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="220dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:paddingBottom="10dp"
                   android:layout_marginLeft="20dp"
                   android:background="@drawable/story_card"
                   android:id="@+id/card3">

                   <ImageView
                       android:id="@+id/imgitem3"
                       app:layout_constraintTop_toTopOf="@id/card3"
                       android:layout_width="match_parent"
                       android:layout_height="80dp"
                       android:src="@drawable/study"
                       android:background="@drawable/story_card"
                       android:scaleType="centerCrop"/>

                   <TextView
                       android:id="@+id/title3"
                       app:layout_constraintTop_toBottomOf="@id/imgitem3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:layout_marginTop="8dp"
                       android:layout_marginLeft="20dp"
                       android:text="Du học Úc"/>

                   <TextView
                       android:id="@+id/content3"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="5dp"
                       app:layout_constraintTop_toBottomOf="@id/title3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:lines="2"
                       android:text="Chắc bạn cũng biết. Du học là 1 vấn. đề rất chi là nan giải đúng không nà..."/>

               </androidx.constraintlayout.widget.ConstraintLayout>

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="220dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:paddingBottom="10dp"
                   android:layout_marginLeft="20dp"
                   android:background="@drawable/story_card"
                   android:id="@+id/card4">

                   <ImageView
                       android:id="@+id/imgitem4"
                       app:layout_constraintTop_toTopOf="@id/card4"
                       android:layout_width="match_parent"
                       android:layout_height="80dp"
                       android:src="@drawable/study"
                       android:background="@drawable/story_card"
                       android:scaleType="centerCrop"/>

                   <TextView
                       android:id="@+id/title4"
                       app:layout_constraintTop_toBottomOf="@id/imgitem4"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:layout_marginTop="8dp"
                       android:layout_marginLeft="20dp"
                       android:text="Du học Úc"/>

                   <TextView
                       android:id="@+id/content4"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="5dp"
                       app:layout_constraintTop_toBottomOf="@id/title4"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:lines="2"
                       android:text="Chắc bạn cũng biết. Du học là 1 vấn. đề rất chi là nan giải đúng không nà..."/>

               </androidx.constraintlayout.widget.ConstraintLayout>

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="220dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:paddingBottom="10dp"
                   android:layout_marginLeft="20dp"
                   android:background="@drawable/story_card"
                   android:id="@+id/card5">

                   <ImageView
                       android:id="@+id/imgitem5"
                       app:layout_constraintTop_toTopOf="@id/card5"
                       android:layout_width="match_parent"
                       android:layout_height="80dp"
                       android:src="@drawable/study"
                       android:background="@drawable/story_card"
                       android:scaleType="centerCrop"/>

                   <TextView
                       android:id="@+id/title5"
                       app:layout_constraintTop_toBottomOf="@id/imgitem5"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:layout_marginTop="8dp"
                       android:layout_marginLeft="20dp"
                       android:text="Du học Úc"/>

                   <TextView
                       android:id="@+id/content5"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="5dp"
                       app:layout_constraintTop_toBottomOf="@id/title5"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:lines="2"
                       android:text="Chắc bạn cũng biết. Du học là 1 vấn. đề rất chi là nan giải đúng không nà..."/>

               </androidx.constraintlayout.widget.ConstraintLayout>
           </LinearLayout>
       </HorizontalScrollView>
    </LinearLayout>
</ScrollView>

</LinearLayout>